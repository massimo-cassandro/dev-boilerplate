{
  "__help": "https://code.visualstudio.com/docs/languages/jsconfig",
  "compilerOptions": {
    "target": "es2023",
    "baseUrl": ".",
    "module": "ES6",
    "allowSyntheticDefaultImports": false,
    "paths": {

      "@apps/*": ["./apps/*"],
      "@css/*": ["./frontend/css/*"],
      "@src/*": ["./frontend/src/*"],
      "@minimo/*": ["./frontend/minimo/*"],
    }
  },
  "exclude": ["node_modules", "dist", "docs", "build"]
}
